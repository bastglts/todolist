doctype html

html
  head
    meta(charset='utf-8')
    title Todo list
    style a {text-decoration: none; color: black;}

  body
    h1 Here's your todo list

    form(method='post' action='/todo')
      label(for='todo') Add a todo : 
      input(type='text' id='todo' name='todo')
      input(type='submit')
      
    ul
      each todo in todolist
        li
          | #[a(href=`/todo/${todo._id}`) ⚔]
          |
          | #[a(href=`/todo/modify/${todo._id}`) ✎]
          |
          - if (indexOfTodoToModify === todo._id.toString())
            form(method='post' action=`/todo/modify/${todo._id}`)
              input(type='text' name='modifiedTodo' value=`${todo.item}`)
              input(type='submit')
          - else
            | #{todo.item}